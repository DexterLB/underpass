import "library.ccg".
import "amenities.ccg".

begin S.

SE < Set.

S < Set.

Entity < Set.

mark="begin"  : S / SE        @ \x: SE    => S[Set[x]] .
mark="end"    : SE \ Set      @ \x: Set   => SE[x] .

pos="comma"   : $X \ $X       @ id.

raw="in"      
    : Set / Set \ Set 
    @ \things, where => and things (in where).

pos="nnp" `'$raw'` : String
    : Entity          
    @ name.

raw="city"    : Set \ Entity    @ and city.
raw="near"    : Set \ Set / Set @ \b, a => and a (near b).
